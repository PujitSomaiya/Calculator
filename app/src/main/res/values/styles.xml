<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btnNumber" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/bg_btn</item>
        <item name="backgroundTint">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="btnSymbol" >
        <item name="android:textColor">@color/colorGreen</item>
        <item name="backgroundTint">@color/colorGrey</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="btnEquals" >
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorDarkGrey</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>
